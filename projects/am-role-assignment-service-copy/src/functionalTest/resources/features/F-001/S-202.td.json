{
  "title": "must successfully create lead-judge Case Role Assignment",
  "_guid_": "S-202",
  "_extends_": "F-001_Test_Data_Base",
  "specs": [
    "contains ReplaceExisting is false and reference set to caseId",
    "Befta1 - who is the actor for requested role",
    "contains case-allocator org role as assigner",
    "contains leadership-judge org role as assignee",
    "contains lead-judge case role assignment"
  ],
  "users": {
    "invokingUser": {
      "_extends_": "AmBeftaUser6"
    }
  },
  "request": {
    "body": {
      "roleRequest": {
        "assignerId": "${[scenarioContext][testData][users][invokingUser][id]}",
        "reference": "1714647999147997/lead-judge"
      },
      "requestedRoles": [
        {
          "_extends_": "RequestedRole",
          "actorId": "${[scenarioContext][testData][users][befta1][id]}",
          "roleName": "lead-judge",
          "roleCategory": "JUDICIAL",
          "roleType": "CASE",
          "grantType": "SPECIFIC",
          "attributes":
          {
            "caseId" : "1714647999147997",
            "jurisdiction": "IA",
            "caseType": "Asylum"
          }
        }
      ]
    }
  },
  "expectedResponse": {
    "_extends_": "Common_201_Response",
    "headers": {
      "Content-Length": "[[ANYTHING_PRESENT]]",
      "Content-Type": "application/json"
    },
    "body": {
      "roleAssignmentResponse": {
        "roleRequest": {
          "_extends_": "ResponseRoleRequest",
          "reference": "${[scenarioContext][testData][request][body][roleRequest][reference]}",
          "replaceExisting": false
        },
        "requestedRoles": [
          {
            "_extends_": "ResponseRequestedRole",
            "actorId": "${[scenarioContext][testData][users][befta1][id]}",
            "roleName": "lead-judge",
            "roleCategory": "JUDICIAL",
            "roleType": "CASE",
            "grantType": "SPECIFIC",
            "attributes":
            {
              "caseId" : "${[scenarioContext][testData][request][body][requestedRoles][0][attributes][caseId]}",
              "jurisdiction" : "${[scenarioContext][testData][request][body][requestedRoles][0][attributes][jurisdiction]}",
              "caseType" : "Asylum"
            }
          }
        ]
      }
    }
  }
}
